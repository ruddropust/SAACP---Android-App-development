<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp"
    tools:context=".CGPACalculator.CgpaCalculator">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorSecondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:text="CGPA Calculator"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_work"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            >

            <GridLayout
                android:id="@+id/grid1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header"
                tools:ignore="NotSibling"
                android:layout_margin="2dp"
                android:rowCount="2"
                android:columnCount="3">
                <!--First Row-->
                <!--row 0, col 0-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingTop="8dp"
                            android:layout_height="50dp"
                            android:text="Subject"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#5b5b5b"
                            android:layout_marginTop="2dp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 0, col 0-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingTop="8dp"
                            android:layout_height="50dp"
                            android:text="Credit"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#5b5b5b"
                            android:layout_marginTop="2dp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 0, col 0-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingTop="8dp"
                            android:layout_height="50dp"
                            android:text="Grade"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#5b5b5b"
                            android:layout_marginTop="2dp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--End First Row-->
                <!--Second Row-->
                <!--row 0, col 0-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <EditText
                            android:id="@+id/subject_view"
                            android:layout_width="wrap_content"
                            android:maxWidth="160dp"
                            android:layout_height="50dp"
                            android:hint="EEE-2101"
                            android:textColor="@color/colorPrimary"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 0, col 0-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <EditText
                            android:id="@+id/credit_view"
                            android:maxWidth="70dp"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:hint="3.00"
                            android:textColor="@color/colorPrimary"
                            android:textAlignment="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 0, col 0-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <Spinner
                            android:id="@+id/spinner_grade"
                            android:layout_width="90dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--End First Row-->

            </GridLayout>
            <GridLayout
                android:id="@+id/grid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/grid1"
                tools:ignore="NotSibling"
                android:layout_marginTop="15dp"
                android:rowCount="1"
                android:columnCount="2">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/add_field"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_button"
                            android:text="ADD"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--row 0, col 0-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/calculate_gpa"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_button"
                            android:text="Evaluate"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycluar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectengular_shape_button"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:layout_marginBottom="1dp"
            app:layout_constraintTop_toBottomOf="@+id/main_work">


            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Your answer will be here"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>