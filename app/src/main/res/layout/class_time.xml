<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/class_name_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Course Name"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:layout_marginTop="5dp"
                    android:textColor="#0FBCF9"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/class_teacher_name_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Teacher"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/class_time_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Time"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorRedThin"
                    android:paddingLeft="10dp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/class_date_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Date"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorRedThin"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>