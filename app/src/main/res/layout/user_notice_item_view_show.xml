<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/notice_actionPart"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notice_title_show_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Teacher name"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textColor="#0FBCF9"
                android:textSize="20sp"/>
            <TextView
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:id="@+id/notice_message_show_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher qualification"
                android:fontFamily="sans-serif-thin"
                android:textColor="#0CAA53"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <ImageButton
                android:id="@+id/notice_download_show_user"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_bg_but"
                android:src="@drawable/ic_cloud_download" />


        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/notice_actionPart"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccentBlack"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>